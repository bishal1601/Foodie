@{
    ViewData["Title"] = "LogIn";
    Layout = null; // This removes the layout
}

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<style>
    body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background: linear-gradient(135deg, #f6d365 0%, #fda085 50%, #fbc7d4 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
    }
    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        animation: fadeIn 1s ease-in-out;
    }
    keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .login-container .btn {
        width: 100%;
        background-color: #fda085;
        border: none;
        transition: background-color 0.3s;
    }
    .login-container .btn:hover {
        background-color: #f6d365;
    }
    .login-container h2,h6 {
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
        text-align: center;
        color: #333;
    }
    .login-container .form-group {
        margin-bottom: 1.25rem;
    }
    .login-container .form-control {
        border-radius: 5px;
    }
    .login-container .text-center a {
        display: block;
        margin-top: 1rem;
        color: #fda085;
        text-decoration: none;
        transition: color 0.3s;
    }
    .login-container .text-center a:hover {
        color: #f6d365;
    }
    .login-container .form-control:focus {
        box-shadow: 0 0 5px rgba(253, 160, 133, 0.5);
        border-color: #fda085;
    }
    .errormessage{
        color:red;
        font-size:15px;
    }
</style>

<div class="login-container">
    <h2>Login</h2>
    <h6 class="errormessage">@ViewBag.loginError</h6>
    <form asp-area="" method="post">
        <div class="form-group">
            <label for="UserName">Username</label>
            <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Enter Username" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="Password" placeholder="Password" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <div class="text-center">
            <a href="~/Customer/CustomerRegister">Don't have an account? Register</a>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
