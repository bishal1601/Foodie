@model Foodie.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}

<br />



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">Delete Product</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> Are you sure you want to delete this product?
                    </div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Product Name:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

                        <dt class="col-sm-3">Price:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-3">Preparation Time:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Time)</dd>
                    </dl>

                    <form asp-action="DeleteProduct">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

