@model IEnumerable<Foodie.Models.User>

@{
    ViewData["Title"] = "View Users";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}
<br/>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 text-primary">User Management</h1> <!-- Updated header -->
        <a class="btn btn-success btn-lg shadow" asp-action="Adduser"><i class="fas fa-user-plus"></i> Add New User</a> <!-- Updated button -->
    </div>

    @if (Model != null && Model.Any())
    {
            <div class="card shadow-lg border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.First().FName)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().LName)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().UserName)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Contact)</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.FName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.LName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                                        <td class="text-center">
                                            <a class="btn btn-primary btn-sm mx-1" asp-action="Updateuser" asp-route-id="@item.Id">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            
                                            <a class="btn btn-danger btn-sm mx-1" asp-action="DeleteUser" asp-route-id="@item.Id">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    }
    else
    {
            <div class="alert alert-warning text-center" role="alert">
                No users found.
            </div>
    }
</div>
